<!DOCTYPE html>
<html>
<head>
  <title>Luv2Stay</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'header' %>

  <p class="bg-success", id="notice"><%= flash[:notice] %></p>
  <p class="bg-danger", id="alert"><%= flash[:alert] %></p>


<%= yield %>

  <%= render 'footer' %>

</body>
</html>
