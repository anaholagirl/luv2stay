<header>

    <nav class="nav-header" id="page-header">
      <div class="nav-left" id="logo">
      <%= link_to "Luv2Stay", root_path, :class => 'btn btn-primary btn-lg' %>
      </div>
      <div class="nav-right" id="pages-nav">
      <ul>
        <li><a href="#">About</a></li>
        <li><a href="#">Rentals</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
      </div>
      <div class="nav-right" id="signin">
        <% if current_user %>
            <div id="logging_in">Logged in as <%= link_to current_user.name,  user_path(current_user), :class => 'btn btn-primary btn-lg' %>
            <%= link_to 'Log Out', logout_path, :class => 'btn btn-primary btn-lg' %></div>
          <% else %>
            <div id="need_signup"><%= link_to 'Sign Up', signup_path, :class => 'btn btn-primary btn-lg' %> or
            <%= link_to 'Log In', login_path, :class => 'btn btn-primary btn-lg' %></div>
        <% end %>
      </div>
    </nav>

  </header>
